// draw multiline text
Image offs = Image.create(1440, 900, 32);
Image back = Image("asset/image/forest.png", 32);
Image font = Image.openFnt("asset/font/modern-1.fnt");

char text[*] = "\
multi line
text
";


offs.resize(null, back, null, 1);

offs.drawText(100, 100, font, text, 0xff00ff);

inline p = 2;
Rect rect = { x: 100, y: 200, w: 0, h: 0 };
font.clipText(rect, text);
offs.fillRect(rect.x - p, rect.y - p, rect.x + rect.w + p, rect.y + rect.h + p, 0x000000);
offs.drawText(rect.x, rect.y, font, text, 0xff00ff);
debug("rect", rect);

offs.show();

offs.destroy();
back.destroy();
font.destroy();
