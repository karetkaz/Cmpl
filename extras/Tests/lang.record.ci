// value type
struct rgbF32 {
	float32 r;  // red
	float32 g;  // green
	float32 b;  // blue
}

// packed type
struct rgbU8: 1 {
	uint8 b;  // red
	uint8 g;  // green
	uint8 r;  // blue
}

// union type
struct color: 0 {
	uint32 col;
	rgbU8 rgb;
}

// reference counted type
struct Color: object {
	rgbF32 value;
}

