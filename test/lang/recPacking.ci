// align 0 => union
struct record_pack0: 0 {
	uint8 _0;
	uint64 a;
	uint8 _1;
	uint32 b;
	uint8 _2;
	uint16 c;
}

// align 1 => no padding
struct record_pack1: 1 {
	uint8 _0;
	uint64 a;
	uint8 _1;
	uint32 b;
	uint8 _2;
	uint16 c;
}

// align 2 => padding is max 2
struct record_pack2: 2 {
	uint8 _0;
	uint64 a;
	uint8 _1;
	uint32 b;
	uint8 _2;
	uint16 c;
}

// align 4 => padding is max 4
struct record_pack4: 4 {
	uint8 _0;
	uint64 a;
	uint8 _1;
	uint32 b;
	uint8 _2;
	uint16 c;
}

// align 8 => padding is max 8
struct record_pack8: 8 {
	uint8 _0;
	uint64 a;
	uint8 _1;
	uint32 b;
	uint8 _2;
	uint16 c;
}

// no alignment => padding is set by the compiler
struct record_packDef {
	uint8 _0;
	uint64 a;
	uint8 _1;
	uint32 b;
	uint8 _2;
	uint16 c;
}
