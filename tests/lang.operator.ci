integer opA = 16;
integer opB = 7;
int32   opC = 2;

integer opPls = +opB;
integer opNeg = -opB;
integer opCmt = ~opB;

integer opAdd = opA + opB;
integer opSub = opA - opB;
integer opMul = opA * opB;
integer opDiv = opA / opB;
integer opMod = opA % opB;

integer opShl = opA << opC;
integer opShr = opA >> opC;
integer opAnd = opA &  opB;
integer opIor = opA |  opB;
integer opXor = opA ^  opB;

bool opNot = !opB;
bool opCeq = opA == opB;
bool opCne = opA != opB;
bool opClt = opA <  opB;
bool opCle = opA <= opB;
bool opCgt = opA >  opB;
bool opCge = opA >= opB;
